<%= form_for(task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>

  <% if !task.id.nil? %>
    <%= f.check_box :completed %>
    <%= f.label :completed %>
  <% end %>

  <% if task.id.nil? %>
    <%= f.submit "Create super interesting task" %>
  <% else %>
    <%= f.submit %>
  <% end %>

<% end %>